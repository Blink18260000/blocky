<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bitcoin.hacktheplanet.cfb.bitcointiler" >

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="cyanogenmod.permission.PUBLISH_CUSTOM_TILE" />

    <dependency>
        <groupId>
com.google.zxing
        </groupId>

        <artifactId>
core
        </artifactId>

        <version>
3.1.0
        </version>
    </dependency>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".KeySubmit"
            android:label="@string/app_name" >
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.default" />
            </intent-filter>-->
        </activity>
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".KeySubmit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bitcoin.hacktheplanet.cfb.bitcointiler.KeySubmit" />
        </activity>
        <activity
            android:name=".PasswordActivity"
            android:label="@string/title_activity_password" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bitcoin.hacktheplanet.cfb.bitcointiler.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bitcoin.hacktheplanet.cfb.bitcointiler.MainActivity" />
        </activity>
    </application>

</manifest>
